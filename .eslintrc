{
  "root": true,
  "env": {
    "node": true
  },
  "extends": [
    "plugin:vue/vue3-recommended",
    "eslint:recommended",
    "@vue/prettier",
    "plugin:prettier/recommended"
  ],
  "rules": {
    "semi": ["warn", "always"],
    "quotes": ["warn", "single", { "avoidEscape": true }],
    "no-console": "warn",
    "prettier/prettier": [
      "error",
      {
        "endOfLine": "auto"
      }
    ]
  },
  "parserOptions": {
    "parser": "babel-eslint"
  },
  "globals": {
    "wwLib": "readonly",
    "axios": "readonly",
    "_": "readonly"
  }
}
